<%- include('../../partials/siteHeader') %>


<div class="container">
  <div class="row">
    <div class="col-md-2 my-3">
      <%- include('../../partials/sidebar.ejs') %>
    </div>
    <div class="col-md-10 my-3">
      <div class="row">
        <div class="col-sm-12">
          <h2 class="text-center">My Dashboard</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 my-2">
          <div class="card card-body">
            <h5>Recent posts:</h5>
            <%if(posts.length === 0) {%>
            <div class="card">
              <h5>There is no post available</h5>
            </div>
            <%} else {%>
            <div class="card-deck">
              <%for(let post of posts.reverse()){%>
              <div class="card" style="width: 10em">
                <img height="120" src="<%= post.thumbnail%>" alt="post.title" class="card-img-top">
                <div class="card-body">
                  <a href="/post/edit/<%=post._id%>">
                    <h5 class="card-title" style="color:#222"><%=post.title%></h5>
                  </a>
                </div>
              </div>
              <%}%>
              </div>
            <%}%>
            </div>
          </div>
          <div class="col-sm-12 my-2">
            <div class="card card-body">
              <h5>Recent bookmarks:</h5>
              <div class="row">
                <% if(bookmarks.length === 0) {%>
                <p class="text-center text-muted my-5">You did not create any bookmark</p>
                <% } else {%>
                <div class="card-deck">
                  <% for(let bookmark of bookmarks) {%>
                  <div class="card col-sm-3 py-2 mx-2">
                    <a href="<%= `/explorer/${bookmark._id}`%>" style="color: #222;">
                      <img height="120" src="<%= bookmark.thumbnail%>" class="card-img">
                      <p><%= bookmark.title%></p>
                    </a>
                  </div>
                  <% } %>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



  <%- include('../../partials/siteFooter') %>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js"></script>


  </body>

  </html>