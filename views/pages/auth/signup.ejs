<%- include('../../partials/siteHeader') %>

<div class="container">
  <div class="row my-3">
    <div class="col-md-6 offset-md-3">
      <div class="card card-body">
        <form action="/auth/signup" method="POST">
          <h2 class="mb-3">Create your new account!</h2>
          <div class="form-group">
            <label for="username">Username (must be unique)</label>
            <input type="text" name="username" id="username"
              class="form-control <%= error.username ? 'is-invalid' : '' %>"
              value="<%= value.username ? value.username: '' %>" placeholder="Enter username">
            <div class="invalid-feedback">
              <%= error.username && error.username %>
            </div>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="form-control <%= error.email ? 'is-invalid' : '' %>"
              value="<%= value.email ? value.email: '' %>" placeholder="Enter your valid email">
            <div class="invalid-feedback">
              <%= error.email && error.email %>
            </div>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password"
              class="form-control <%= error.password ? 'is-invalid': '' %>"
              value="<%= value.password ? value.password: '' %>" placeholder="Enter password">
            <div class="invalid-feedback">
              <%= error.password && error.password %>
            </div>
          </div>
          <div class=" form-group">
            <label for="confirmPassword">Confirm password</label>
            <input type="password" name="confirmPassword" id="confirmPassword"
              class="form-control <%= error.confirmPassword ? 'is-invalid':''%>"
              value="<%= value.confirmPassword ? value.confirmPassword: '' %>" placeholder="Enter confirm password">
            <div class="invalid-feedback">
              <%= error.confirmPassword && error.confirmPassword %>
            </div>
          </div>
          <div class="text-right">
            <input type="submit" value="Submit" class="btn btn-primary">
          </div>
        </form>
        <a class="mt-3" href="/auth/login">Have an account? login here</a>
      </div>
    </div>
  </div>
</div>
<%- include('../../partials/siteFooter') %>

</body>

</html>